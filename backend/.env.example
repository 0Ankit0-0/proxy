# =============================================================================
# DEPLOYMENT MODE CONFIGURATION
# =============================================================================

# Deployment mode: isolated, lan, or debug
# - isolated: True air-gap, localhost only, no remote collection
# - lan: Private network, allows SSH/WinRM within LAN
# - debug: Development only, allows all connections (INSECURE)
DEPLOYMENT_MODE=isolated

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption key for data at rest (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_encryption_key_here_32_bytes_base64

# SOUP signing key for update verification
SOUP_SIGNING_KEY=your_secret_key_here_minimum_32_chars

# JWT secret key for authentication (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here_64_chars

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application environment (development, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# API Configuration
# isolated: Use 127.0.0.1
# lan: Use 0.0.0.0
# debug: Use 0.0.0.0
API_HOST=127.0.0.1
API_PORT=8000

# CORS Configuration
# isolated: http://localhost:3000,http://127.0.0.1:5173
# lan: http://192.168.1.0/24,http://10.0.0.0/8
# debug: * (allow all - INSECURE)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# DuckDB database path (relative to backend/)
DB_PATH=data/duckdb/Q_logs.db

# Maximum database size in GB
MAX_DB_SIZE_GB=10

# =============================================================================
# LOG COLLECTION SETTINGS
# =============================================================================

# Maximum file size for log uploads (in MB)
MAX_UPLOAD_SIZE_MB=100

# Temporary storage path for collected logs
TEMP_STORAGE_PATH=data/temp

# Log retention period (in days)
LOG_RETENTION_DAYS=90

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# AI model path
AI_MODEL_PATH=data/models/iforest_model.pkl

# TF-IDF vectorizer path
VECTORIZER_PATH=data/models/tfidf_vectorizer.pkl

# Anomaly detection threshold (0.0 - 1.0)
ANOMALY_THRESHOLD=0.5

# Contamination rate for anomaly detection (0.01 - 0.10)
CONTAMINATION_RATE=0.02

# =============================================================================
# REMOTE COLLECTION SETTINGS
# =============================================================================

# SSH timeout (seconds)
SSH_TIMEOUT=30

# WinRM timeout (seconds)
WINRM_TIMEOUT=30

# FTP timeout (seconds)
FTP_TIMEOUT=30

# Maximum concurrent remote connections
MAX_REMOTE_CONNECTIONS=5

# =============================================================================
# REPORT GENERATION
# =============================================================================

# Report output directory
REPORT_OUTPUT_DIR=data/reports

# Default report format (pdf, csv, json)
DEFAULT_REPORT_FORMAT=pdf

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT token expiration (in minutes)
JWT_EXPIRATION_MINUTES=480

# Enable authentication (true/false)
ENABLE_AUTH=true

# Default admin credentials (CHANGE IN PRODUCTION!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=Quorum@2025

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=data/logs/app.log

# Maximum log file size (in MB)
MAX_LOG_FILE_SIZE_MB=50

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Number of worker processes
WORKERS=4

# Maximum request size (in MB)
MAX_REQUEST_SIZE_MB=100

# Request timeout (seconds)
REQUEST_TIMEOUT=300

# =============================================================================
# SOUP UPDATE PROTOCOL
# =============================================================================

# SOUP update directory
SOUP_UPDATE_DIR=data/updates

# Enable automatic updates (true/false)
ENABLE_AUTO_UPDATES=false

# Update check interval (in hours)
UPDATE_CHECK_INTERVAL=24
