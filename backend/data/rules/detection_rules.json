[
  {
    "id": "RULE-001",
    "title": "Mimikatz Credential Dumping",
    "level": "critical",
    "description": "Detects Mimikatz credential dumping tool",
    "detection": {
      "keywords": ["mimikatz", "sekurlsa", "lsadump", "kerberos::ptt"]
    },
    "tags": ["credential_access", "T1003"]
  },
  {
    "id": "RULE-002",
    "title": "PowerShell Obfuscation",
    "level": "high",
    "description": "Detects obfuscated PowerShell commands",
    "detection": {
      "keywords": ["-enc", "-nop", "-w hidden", "bypass", "IEX"]
    },
    "tags": ["execution", "T1059"]
  },
  {
    "id": "RULE-003",
    "title": "SQL Injection Attempt",
    "level": "high",
    "description": "Detects SQL injection patterns",
    "detection": {
      "keywords": ["' OR '1'='1", "UNION SELECT", "admin'--", "; DROP TABLE"]
    },
    "tags": ["web_attack", "injection"]
  },
  {
    "id": "RULE-004",
    "title": "Brute Force Login",
    "level": "medium",
    "description": "Multiple failed login attempts",
    "detection": {
      "keywords": ["Failed password", "authentication failure", "invalid user"]
    },
    "tags": ["credential_access", "brute_force"]
  },
  {
    "id": "RULE-005",
    "title": "Log Clearing",
    "level": "high",
    "description": "Attempt to clear security logs",
    "detection": {
      "keywords": ["wevtutil cl", "rm -rf /var/log", "Clear-EventLog"]
    },
    "tags": ["defense_evasion", "T1070"]
  }
]